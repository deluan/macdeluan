[user]
	name = Deluan
	email = deluan@thoughtworks.com

[push]
	default = simple

[alias]
	st = status
	co = checkout
	ci = commit
	pr = pull --rebase
	lg = log --oneline
	ll = log --pretty=format:'%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --numstat
	ls = log --pretty=format:'%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate
	who = "!f() { user=`git config user.name`; email=`git config user.email`; echo \"$user <$email>\"; }; f"
	undo-last-commit = reset --soft 'HEAD^'
	serve = daemon --reuseaddr --base-path=. --export-all --verbose
	master-merge = "!git co dev && git pull --rebase && git push && git co master && git pr && git merge dev && git push && git co dev"

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	filemode = false
	autocrlf = input
